/* components/header/header.wxss */
header{margin:0 auto;width:100%;position: relative;overflow:hidden}
.bgcolor{background:#FF8534;border-radius:1000px;width:1000rpx;height:1000rpx;position:absolute;top:-400rpx;z-index:-1;margin:0 auto;left:50%;margin-left:-500rpx}
.bgcolor.red{background:#FF6C6C}
.bgcolor.blue{background:#4A90E2}
.bgcolor.green{background:#7ED321}

.head{display:flex;justify-content:baseline;flex-direction: column;text-align:center;flex-wrap: wrap;height:650rpx}
.head_img{width:240rpx;margin:80rpx auto 60rpx;}
.img_t_1{width:426rpx;margin:0 auto}

@media all and (max-height: 812px) and (min-height:737px) {
    .bgcolor{top:-400rpx}
    .head{height:650rpx;}
    .head_img{margin-bottom:40rpx;margin:80rpx auto 60rpx;}
    .img_t_1{margin-bottom:50rpx;}
}

@media all and (max-height: 705px) and (min-height:668px) {
    .bgcolor{top:-550rpx}
    .head{height:520rpx;}
    .head_img{margin-bottom:30rpx;margin-top:0;}
    .img_t_1{margin-bottom:50rpx;}
}


@media all and (max-height: 667px) and (min-height:569px) {
    .bgcolor{top:-520rpx}
    .head{height:500rpx;}
    .head_img{margin-bottom:40rpx;margin-top:0;}
    .img_t_1{margin-bottom:50rpx;}
}

@media all and (max-height: 568px) {  
    .bgcolor{top:-550rpx}
    .head{height:480rpx;}
    .head_img{margin-bottom:20rpx;margin-top:0;}
    .img_t_1{margin-bottom:30rpx;}

}

